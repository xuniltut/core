<header class="header-wrapper">
	<div class="container">
		<div class="row">
			<div class="col-12">

				<div class="header">

					{% if header.iconSrc %}
					 <img
					 	src="{{ header.iconSrc }}"
						{% if header.iconAlt %}
							alt="{{ header.iconAlt }}"
							title="{{ header.iconAlt }}"
						{% endif %}
						class="header__icon"
						loading="lazy">
					{% endif %}

					<h1 class="header__title">{{ header.title }}</h1>
					<p class="header__subtitle">{{ header.subtitle }}</p>

				</div>
				
			</div>
		</div>
	</div>
</header>
